{
  "name": "set-game",
  "version": "2.0.0",
  "private": true,
  "description": "Modern multiplayer SET card game with React, TypeScript, and Vite",
  "scripts": {
    "dev": "concurrently \"yarn workspace @set-game/server dev\" \"yarn workspace client dev\" --names \"server,client\" --prefix-colors \"blue,magenta\"",
    "dev:server": "yarn workspace @set-game/server dev",
    "dev:client": "yarn workspace client dev",
    "build": "yarn workspace client build",
    "build:server": "yarn workspace @set-game/server build",
    "start": "yarn workspace @set-game/server start"
  },
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
